{
  "name": "stepan/github-api",
  "description": "PHP/GitHub Api Challenge",
  "scripts": {
    "create-repo": "@php cli --action=create_repo",
    "delete-repo": "@php cli --action=delete_repo",
    "test": "@php test"
  },
  "require": {
    "php": "^8.1",
    "vlucas/phpdotenv": "^5.4",
    "ext-curl": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Commands\\": "app/commands",
      "App\\Requests\\": "app/requests",
      "App\\Responses\\": "app/responses",
      "App\\Enums\\": "app/enums",
      "App\\Routers\\": "app/routers",
      "App\\Controllers\\": "app/controllers",
      "Tests\\": "tests/"
    }
  }
}